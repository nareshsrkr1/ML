import pandas as pd

# Read the Excel file
input_file = 'input_file.xlsx'
xls = pd.ExcelFile(input_file)
sheet_names = xls.sheet_names

# Split each sheet into separate Excel files
for sheet_name in sheet_names:
    print(f"Processing sheet: {sheet_name}")
    df = pd.read_excel(input_file, sheet_name=sheet_name, engine='openpyxl')
    df.to_excel(f'{sheet_name}.xlsx', index=False, engine='openpyxl')

    print(f"Finished processing sheet: {sheet_name}")

print("Task completed: All sheets split and saved as separate Excel files.")
